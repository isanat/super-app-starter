generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  User              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Church {
  id                         String   @id
  name                       String
  slug                       String   @unique
  address                    String?
  city                       String?
  state                      String?
  phone                      String?
  email                      String?
  serviceTimes               String?
  createdAt                  DateTime @default(now())
  updatedAt                  DateTime
  adminId                    String   @unique
  User_Church_adminIdToUser  User     @relation("Church_adminIdToUser", fields: [adminId], references: [id])
  Event                      Event[]
  User_User_churchIdToChurch User[]   @relation("User_churchIdToChurch")

  @@index([slug])
}

model Event {
  id              String            @id
  churchId        String
  title           String
  description     String?
  type            EventType
  date            DateTime
  endTime         DateTime?
  location        String?
  status          EventStatus       @default(DRAFT)
  autoGenerated   Boolean           @default(false)
  notes           String?
  setlist         String?
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  createdById     String
  Church          Church            @relation(fields: [churchId], references: [id], onDelete: Cascade)
  User            User              @relation(fields: [createdById], references: [id])
  EventInvitation EventInvitation[]
  EventPosition   EventPosition[]

  @@index([churchId, date])
  @@index([status])
}

model EventInvitation {
  id                String           @id
  eventId           String
  userId            String
  role              EventRole
  instrument        String?
  vocalPart         String?
  status            InvitationStatus @default(PENDING)
  invitedAt         DateTime         @default(now())
  respondedAt       DateTime?
  cancelReason      String?
  penaltyApplied    Boolean          @default(false)
  penaltyPoints     Int?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime
  guestFromChurchId String?
  isGuest           Boolean          @default(false)
  groupId           String?
  positionId        String?
  Event             Event            @relation(fields: [eventId], references: [id], onDelete: Cascade)
  MusicGroup        MusicGroup?      @relation(fields: [groupId], references: [id])
  User              User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([eventId, userId])
  @@index([eventId])
  @@index([isGuest])
  @@index([status])
  @@index([userId])
}

model EventPosition {
  id           String   @id
  eventId      String
  roleName     String
  roleType     String
  slotsTotal   Int      @default(1)
  slotsFilled  Int      @default(0)
  requirements String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime
  Event        Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId])
}

model GroupMember {
  id         String     @id
  groupId    String
  userId     String
  role       GroupRole
  isLeader   Boolean    @default(false)
  instrument String?
  vocalPart  String?
  joinedAt   DateTime   @default(now())
  MusicGroup MusicGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  User       User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([groupId, userId])
  @@index([groupId])
  @@index([userId])
}

model MusicGroup {
  id              String            @id
  name            String
  description     String?
  type            GroupType
  photo           String?
  isActive        Boolean           @default(true)
  totalEvents     Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime
  baseCity        String?
  contactEmail    String?
  contactPhone    String?
  createdById     String
  isPublic        Boolean           @default(true)
  EventInvitation EventInvitation[]
  GroupMember     GroupMember[]
  User            User              @relation(fields: [createdById], references: [id])

  @@index([createdById])
  @@index([isPublic])
  @@index([type])
}

model MusicianProfile {
  id              String   @id @default(cuid())
  userId          String   @unique
  instruments     String   @default("[]")
  vocals          String?  @default("[]")
  skills          String?
  yearsExperience Int?
  bio             String?
  totalEvents     Int      @default(0)
  totalCancels    Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  User            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id              String           @id
  userId          String
  title           String
  message         String
  type            NotificationType
  data            String?
  isRead          Boolean          @default(false)
  readAt          DateTime?
  sentViaApp      Boolean          @default(false)
  sentViaWhatsapp Boolean          @default(false)
  createdAt       DateTime         @default(now())
  User            User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead])
}

model PenaltyHistory {
  id           String   @id
  userId       String
  eventId      String?
  invitationId String?
  points       Int
  reason       String
  description  String?
  createdAt    DateTime @default(now())
  User         User     @relation(fields: [userId], references: [id])
}

model Session {
  id           String   @id
  sessionToken String   @unique
  userId       String
  expires      DateTime
  User         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Song {
  id          String     @id
  churchId    String
  title       String
  artist      String?
  key         String?
  bpm         Int?
  lyrics      String?
  chords      String?
  youtubeUrl  String?
  spotifyUrl  String?
  tags        String?
  status      SongStatus @default(ACTIVE)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime
  createdById String

  @@index([churchId])
}

model User {
  id                           String            @id
  email                        String            @unique
  name                         String
  password                     String
  phone                        String?
  avatar                       String?
  role                         Role              @default(MUSICIAN)
  isActive                     Boolean           @default(true)
  penaltyPoints                Int               @default(0)
  isBlocked                    Boolean           @default(false)
  blockedUntil                 DateTime?
  weeklyAvailability           String?
  
  // Sistema de gamificação
  totalPoints                  Int               @default(0)
  level                        Int               @default(1)
  streak                       Int               @default(0)
  lastEventDate                DateTime?
  
  createdAt                    DateTime          @default(now())
  updatedAt                    DateTime          @updatedAt
  churchId                     String?
  Account                      Account[]
  Church_Church_adminIdToUser  Church?           @relation("Church_adminIdToUser")
  Event                        Event[]
  EventInvitation              EventInvitation[]
  GroupMember                  GroupMember[]
  MusicGroup                   MusicGroup[]
  musicianProfile              MusicianProfile?
  Notification                 Notification[]
  PenaltyHistory               PenaltyHistory[]
  Session                      Session[]
  Church_User_churchIdToChurch Church?           @relation("User_churchIdToChurch", fields: [churchId], references: [id])
  
  // Gamificação
  achievements                 UserAchievement[]
  pointHistory                 PointHistory[]

  // FCM Push Notifications
  FcmToken                     FcmToken[]

  @@index([email])
  @@index([role])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ==================== GAMIFICAÇÃO ====================

// Conquistas disponíveis no sistema
model Achievement {
  id              String             @id @default(cuid())
  code            String             @unique
  name            String
  description     String
  icon            String
  category        AchievementCategory
  requirement     String
  bonusPoints     Int                @default(0)
  isSecret        Boolean            @default(false)
  createdAt       DateTime           @default(now())
  
  userAchievements UserAchievement[]

  @@index([category])
}

// Conquistas desbloqueadas pelos usuários
model UserAchievement {
  id            String    @id @default(cuid())
  userId        String
  achievementId String
  unlockedAt    DateTime  @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievement Achievement @relation(fields: [achievementId], references: [id])

  @@unique([userId, achievementId])
  @@index([userId])
}

// Histórico de pontos ganhos
model PointHistory {
  id           String      @id @default(cuid())
  userId       String
  points       Int
  reason       String
  description  String?
  eventId      String?
  invitationId String?
  action       PointAction
  createdAt    DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

enum EventRole {
  SINGER
  INSTRUMENTALIST
  WORSHIP_LEADER
  SOUND_TECH
  OTHER
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CONFIRMED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum EventType {
  SABBATH_SCHOOL
  DIVINE_SERVICE
  SABBATH_AFTERNOON
  WEDNESDAY_SERVICE
  SPECIAL_EVENT
  REHEARSAL
  OTHER
}

enum GroupRole {
  LEADER
  MEMBER
  DIRECTOR
  ASSISTANT
}

enum GroupType {
  CHOIR
  QUARTET
  DUO
  BAND
  WORSHIP_TEAM
  OTHER
}

enum InvitationStatus {
  PENDING
  CONFIRMED
  DECLINED
  CANCELLED
}

enum NotificationType {
  EVENT_INVITE
  EVENT_REMINDER
  CONFIRMATION
  CANCELLATION
  PENALTY
  SCALE_PUBLISHED
  SYSTEM
  GUEST_INVITE
  POSITION_FILLED
  GROUP_INVITE
  GROUP_EVENT_INVITE
}

enum Role {
  ADMIN
  DIRECTOR
  MUSICIAN
  SINGER
  INSTRUMENTALIST
}

enum SongStatus {
  ACTIVE
  ARCHIVED
  LEARNING
}

enum AchievementCategory {
  PARTICATION
  STREAK
  SOCIAL
  SKILL
  SPECIAL
}

enum PointAction {
  EVENT_CONFIRMED
  EVENT_ATTENDED
  REHEARSAL_ATTENDED
  LAST_MINUTE_FILL
  REFERRAL_JOINED
  STREAK_BONUS
  ACHIEVEMENT_BONUS
  LEVEL_UP
}

// ==================== FCM PUSH NOTIFICATIONS ====================

model FcmToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  deviceId  String?  // Identificador do dispositivo
  platform  String?  // web, android, ios
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastUsed  DateTime?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
}
